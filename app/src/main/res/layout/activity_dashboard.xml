        android:layout_marginTop="45dp"
        android:text="Keluar"
        android:fontFamily="@font/poppins_semibold"
        android:background="@drawable/xml_logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cd_info" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_274sdp"
        android:layout_height="@dimen/_140sdp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_1" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cd_info"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_140sdp"
        app:cardBackgroundColor="#92E3A9"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_info">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_13sdp"
            android:src="@drawable/icon_uang" />

        <TextView
            android:id="@+id/tvinfoTotalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="125dp"
            android:fontFamily="@font/poppins_light"
            android:text="Total Transaksi"
            android:textColor="@color/warna_teks"
            android:textSize="@dimen/_11sdp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.143"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cd_info" />


