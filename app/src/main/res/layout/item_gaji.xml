<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/gaji_pokok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gaji Pokok: Rp 5.000.000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/intensif_kunjungan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Intensif Kunjungan: Rp 1.000.000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/bonus_penjualan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bonus Penjualan: Rp 500.000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/gaji_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gaji Total: Rp 6.500.000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/bulan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Bulan: Juni"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tahun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Tahun: 2023"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>
