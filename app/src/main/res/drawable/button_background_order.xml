<!-- button_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF4081" /> <!-- Warna latar belakang saat tombol ditekan -->
            <corners android:radius="8dp" /> <!-- Mengatur sudut lengkung pada latar belakang -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF5722" /> <!-- Warna latar belakang saat tombol tidak ditekan -->
            <corners android:radius="8dp" /> <!-- Mengatur sudut lengkung pada latar belakang -->
        </shape>
    </item>
</selector>
